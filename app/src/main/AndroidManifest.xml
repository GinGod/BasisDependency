<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.gingold.basisdependency">

    <!--网络权限-->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!--读取储存-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!--写入储存-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.gingold.basisdependency.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.SPActivity"/>
        <activity android:name=".activity.MultiLvActivity"/>
        <activity android:name=".activity.MultiRvActivity"/>
        <activity android:name=".activity.RvRefreshActivity"/>
        <activity android:name=".activity.LvRefreshActivity"/>
        <activity android:name=".activity.TestActivity"/>
        <activity android:name=".activity.OkHttpActivity"/>
        <activity android:name=".activity.OkHttpPicActivity"/>
        <activity android:name=".activity.GlideActivity"/>
    </application>

</manifest>